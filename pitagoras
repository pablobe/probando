<html> 
<head> 
<script type="text/javascript"> 
var hipotenusa; 
var cateto1 = 0; 
var cateto2; 
cateto1 = prompt("Digite el cateto 1:"); 
while(cateto1 <= 0) { 
cateto1 = prompt("Digite el cateto 1:"); 
} 
cateto2 = prompt("Digite el cateto 2:"); 
while(cateto2 <= 0) { 
cateto2 = prompt("Digite el cateto 2:"); 
} 
hipotenusa = Math.sqrt(Math.pow(cateto1,2) + Math.pow(cateto2,2)); 
alert("La hipotenusa del triangulo de cateto 1: " + " " + cateto1 + " y cateto 2: " + " " + cateto2 +" es " + hipotenusa); 
</script> 
